{
  "name": "backend",
  "version": "1.0.0",
  "main": "./src/server.js",
  "license": "MIT",
  "scripts": {
    "build": "babel src --extensions '.js,.jsx' --out-dir dist/src",
    "start": "babel-watch src/index.js --extensions '.js,.jsx' --out-dir dist/src",
    "start:prod": "pm2 start dist/src/index.js --no-daemon",
    "restart:prod": "pm2 restart dist/src/index.js",
    "lint": "eslint 'src/**/*'",
    "lint:fix": "eslint --fix 'src/**/*'"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "7.4.0",
    "@babel/preset-env": "^7.3.4",
    "babel-eslint": "^10.0.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0"
  },
  "dependencies": {
    "apollo-server-express": "^2.4.8",
    "babel-watch": "^7.0.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "graphql": "^14.1.1",
    "jsonwebtoken": "^9.0.0",
    "uuid": "^3.3.2"
  }
}
